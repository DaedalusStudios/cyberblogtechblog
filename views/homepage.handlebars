
{{#each posts as |post| }}
<div class="row postheader">
    <div class="col-sm-6">
        <h4>Subject</h4>
    </div>
    <div class="col-sm-3">
        <h4>Email</h4>
    </div>
    <div class="col-sm-3">
        <h4>Date</h4>
    </div>  
</div>
<div class="row postheader">
    <div class="col-sm-6">
      <a href="/post/{{post.id}}">{{post.subject}}</a>        
    </div>
    <div class="col-sm-3">
        {{post.email}}
    </div>
    <div class="col-sm-3">
        {{format_date post.date}}
    </div>
</div>

<div class="row post">
  <div class="col-md-12">
    <h3>{{post.subject}}</h3>
    <p>{{post.message}}</p>
  
  {{!-- display comments button on right side of div --}}
  <div class="comments">
    <button>
      <a href="/post/{{post.id}}">{{post.commentCount}} ðŸ’¬</a>
    </button>
    </div>
    </div>
</div>


{{/each}}
