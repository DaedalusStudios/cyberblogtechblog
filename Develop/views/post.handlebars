{{!-- Create a form to make a new post --}}

<div class="row post">
  <div class="col-md-12">
<form class="new-post" method="POST" action="/api/post">
  <h2>New Post</h2>
  <div class="form-group">
    <label for="subject">Title</label><br>
    <input type="text" id="subject" name="subject" class="form-control" style="width:100%" required>
  </div>
  <div class="form-group">
    <label for="message">Blog Post</label><br>

    <textarea id="message" rows="10" cols="50" style="width:100%" name="message" class="form-control" required></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Create</button>